<mvc:View controllerName="ap.be.materiaal.controller.main"
   xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table
                id="materialTable"
                items="{/MaterialSet}"
                headerText="Materials"
            >
                <columns>
                    <Column
                        id="matnrCol"
                        width="12em"
                    >
                            <Text text="Matnr" />
                    
                    </Column>
                    <Column
                        id="descriptionCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Description" />
                    </Column>
                    <Column
                        id="groupCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Group" />
                    </Column>
                    <Column
                        id="typeCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Type" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" vAlign="Middle" press=".onListItemPress">
                        <cells>
                            <ObjectIdentifier
                                title="{Matnr}"
                            />
                            <Text text="{MatDescription}" />
                            <Text text="{Matkl}" />
                            <Text text="{Mtart}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
