<mvc:View
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form">
    <ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
        <headerTitle>
			<ObjectPageHeader objectTitle="{Matnr}" isObjectTitleAlwaysVisible="false" ></ObjectPageHeader>
		</headerTitle>
        <headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="type"/>
                    <m:Text text="{mtart}"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>
        <sections>
	
			<ObjectPageSection title="Details">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							 <m:Table
                id="materialdetailTable"
                items="{/MaterialSet}"
            >
             <m:headerToolbar>
				<m:OverflowToolbar>
					<m:Title text="Detail" level="H2"/>
					<m:ToolbarSpacer/>
				</m:OverflowToolbar>
			</m:headerToolbar>
                <m:columns>
        
                    <m:Column
                        id="industryCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <m:Text text="Industry" />
                    </m:Column>
                    <m:Column
                        id="Cunitol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <m:Text text="Unit" />
                    </m:Column>
                </m:columns>
                <m:items>
                    <m:ColumnListItem vAlign="Middle" >
                        <m:cells>
                            <m:Text text="{Mbrsh}" />
                            <m:Text text="{Meins}" />
                        </m:cells>
                    </m:ColumnListItem>
                </m:items>
            </m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>